<resources>
    <style name="Theme.WallpaperDimmer" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="actionBarStyle">@style/Theme.WallpaperDimmer.ActionBar</item>
    </style>
    <style name="Theme.WallpaperDimmer.ActionBar" parent="Widget.Material3.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@color/surface_light</item>
    </style>
